@model ESY_MVC.Models.Product

<h2>Delete Product</h2>

<h3>Are you sure you want to delete this product?</h3>
<div>
    <h4>Id: @Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Product Name</dt>
        <dd class="col-sm-10">@Model.ProductName</dd>

        <dt class="col-sm-2">Unit Count</dt>
        <dd class="col-sm-10">@Model.UnitCount</dd>

        <dt class="col-sm-2">Price Per Unit</dt>
        <dd class="col-sm-10">@Model.PricePerUnit</dd>
    </dl>
</div>
<div>
    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
        @Html.AntiForgeryToken()

        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
